{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "pipeline": { "type": "string" },
    "global": {
      "type": "object",
      "properties": {
        "workdir": { "type": "string" },
        "env": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["workdir", "env"]
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "action": { "type": "string" },
          "with": {
            "type": "array",
            "items": { "type": "string" }
          },
          "env": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["action", "with"]
      }
    }
  },
  "required": ["pipeline", "global", "tasks"]
}
